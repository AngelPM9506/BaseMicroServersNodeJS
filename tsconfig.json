    /* Modules */
    "module": "CommonJS",
    "rootDir": "./",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@Controllers/*": ["src/Controllers/*"],
      "@Middlewares/*": ["src/Middlewares/*"],
      "@Routes/*": ["src/Routes/*"],
      "@Services/*": ["src/Services/*"],
      "@Server/*": ["src/Server/*"],
      "@Types/*": ["src/Types/*"],
      "@Utils/*": ["src/Utils/*"]
