{
  "name": "microservsend",
  "version": "1.0.0",
  "description": "Micro Servisio para envio de correos electronicos por medio de SendGrid",
  "main": "index.ts",
  "type": "commonjs",
  "scripts": {
    "moduleAliases:prod": "cross-env NODE_ENV=production node scripts/add_modulealiastoScript.js",
    "moduleAliases:dev": "cross-env NODE_ENV=development node scripts/add_modulealiastoScript.js",
    "build": "node scripts/build.js",
    "deployDB:prod": "node scripts/builddeploy_prod.js",
    "deployDB:dev": "node scripts/builddeploy_deve.js",
    "pushDB": "node scripts/pushDBprisma.js",
    "start-app": "cross-env NODE_ENV=production node -r module-alias/register build/src/index.js",
    "start:build": "npm run build && npm run start-app",
    "prestart": "npm run moduleAliases:prod && npm run deployDB:prod && npm run build",
    "start": "npm run start-app",
    "start:dev": "npm run moduleAliases:dev && npm run deployDB:dev && cross-env NODE_ENV=development nodemon src/index.ts",
    "test": "jest"
  },
  "keywords": [
    "Microservicio",
    "SendGrid",
    "NodeJS",
    "Express",
    "Prisma",
    "MySQL",
    "TypeScript",
    "JWT"
  ],
  "author": "Miguel Angel Parra Mondragon",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-list-endpoints": "^6.0.0",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.9.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-list-endpoints": "^6.0.3",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "babel-plugin-module-resolver": "^5.0.0",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.10.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "module-alias": {
    "baseUrl": "./",
    "paths": {
      "@Controllers/*": "src/Controllers/*",
      "@Middlewares/*": "src/Middlewares/*",
      "@Routes/*": "src/Routes/*",
      "@Services/*": "src/Services/*",
      "@Server/*": "src/Server/*",
      "@Types/*": "src/Types/*",
      "@Utils/*": "src/Utils/*"
    }
  },
  "_moduleAliases": {
    "@Controllers": "./build/src/Controllers",
    "@Middlewares": "./build/src/Middlewares",
    "@Routes": "./build/src/Routes",
    "@Services": "./build/src/Services",
    "@Server": "./build/src/Server",
    "@Types": "./build/src/Types",
    "@Utils": "./build/src/Utils"
  }
}
